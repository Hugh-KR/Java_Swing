	GridLayout grid;
	

	public static void main(String[] args) {
		Search srch = new Search();
		srch.setFrame(srch);
			
	}
	
	public void setFrame(Search serch) {
		JFrame f = new JFrame();
		
		
		grid = new GridLayout();
		
		jpl = new JPanel(grid);
		jpl.add(sp.mainPanel,"SELECT");
		
		
		
		f.setSize(500,400);
		f.setVisible(true);
